{
  "name": "requete",
  "version": "1.1.8",
  "description": "A lightweight client-side HTTP request library based on the Fetch API and supports middleware.",
  "scripts": {
    "build": "pnpm clean && concurrently --timings 'pnpm:build:*'",
    "build:index": "rollup -c --environment build:index",
    "build:index:browser": "rollup -c --environment build:index:browser",
    "build:declaration": "rollup -c --environment build:declaration",
    "build:middleware": "rollup -c --environment build:middleware",
    "build:adapter": "rollup -c --environment build:adapter",
    "build:shared": "rollup -c --environment build:shared",
    "build:global": "rollup -c --environment build:global",
    "build:polyfill": "rollup -c --environment build:polyfill",
    "clean": "rimraf ./dist",
    "lint": "concurrently 'pnpm:lint:*'",
    "lint:fix": "eslint --cache --fix --ext .ts",
    "lint:tsc": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:build": "cd ./test/module-specs && pnpm it --force",
    "serve": "node examples/serve.cjs",
    "release": "release-it",
    "postinstall": "husky install"
  },
  "type": "module",
  "types": "./index.d.ts",
  "main": "./index.cjs",
  "module": "./index.mjs",
  "browser": "./index.umd.js",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.mjs",
      "require": "./index.cjs"
    },
    "./middleware": {
      "types": "./middleware.d.ts",
      "import": "./middleware.mjs",
      "require": "./middleware.cjs"
    },
    "./adapter": {
      "types": "./adapter.d.ts",
      "import": "./adapter.mjs",
      "require": "./adapter.cjs"
    },
    "./shared": {
      "types": "./shared.d.ts",
      "import": "./shared.mjs",
      "require": "./shared.cjs"
    },
    "./polyfill": "./polyfill.umd.js",
    "./package.json": "./package.json"
  },
  "keywords": [
    "http",
    "request",
    "fetch",
    "xhr",
    "middleware",
    "promise"
  ],
  "author": "Rexer Wang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rexerwang/requete.git"
  },
  "bugs": {
    "url": "https://github.com/rexerwang/requete/issues"
  },
  "homepage": "https://github.com/rexerwang/requete#readme",
  "sideEffects": false,
  "devDependencies": {
    "@babel/preset-env": "^7.21.5",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@release-it/conventional-changelog": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-terser": "^0.4.1",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/node": "^18.16.7",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "@vitest/coverage-c8": "^0.31.0",
    "@vitest/ui": "^0.34.3",
    "abortcontroller-polyfill": "^1.7.5",
    "concurrently": "^9.1.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "headers-polyfill": "^3.1.2",
    "husky": "^8.0.3",
    "koa": "^2.14.2",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "release-it": "^15.10.3",
    "rimraf": "^5.0.0",
    "rollup": "^3.21.6",
    "typescript": "^5.0.4",
    "vitest": "^0.31.0"
  },
  "packageManager": "pnpm@9.1.0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{mjs,cjs,js,json,md,yml,html}": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}",
      "tagName": "v${version}",
      "tagAnnotation": "Release v${version}",
      "requireBranch": "main"
    },
    "npm": {
      "publish": true,
      "publishPath": "./dist",
      "ignoreVersion": false
    },
    "github": {
      "release": true,
      "releaseName": "Release v${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md",
        "header": "# Changelog"
      }
    },
    "hooks": {
      "after:bump": [
        "pnpm build",
        "pnpm test:build"
      ],
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
