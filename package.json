{
  "name": "http-request",
  "version": "0.1.0",
  "description": "A lightweight client-side (browsers) request library based on the Fetch API",
  "scripts": {
    "build": "npm run clean && npm run tsc:dts && rollup -c",
    "tsc:dts": "tsc -p tsconfig.build.json",
    "lint": "tsc --noEmit && eslint --cache --fix --ext .ts",
    "clean": "rimraf -rf ./dist ./temp",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "postinstall": "husky install"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "dist/index.d.ts",
      "import": "dist/index.mjs",
      "require": "dist/index.cjs"
    },
    "./polyfill": "dist/polyfill.js",
    "./package.json": "./package.json"
  },
  "types": "dist/index.d.ts",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "browser": "dist/index.umd.js",
  "keywords": [
    "http-request",
    "request",
    "fetch"
  ],
  "author": "Rexer Wang",
  "license": "MIT",
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rexerwang/http-request.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/rexerwang/http-request/issues"
  },
  "homepage": "https://github.com/rexerwang/http-request",
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "abortcontroller-polyfill": "^1.7.5",
    "headers-polyfill": "^3.1.2",
    "query-string": "^8.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.21.4",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-terser": "^0.4.1",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "release-it": "^15.10.1",
    "rimraf": "^5.0.0",
    "rollup": "^3.20.4",
    "rollup-plugin-dts": "^5.3.0",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  },
  "packageManager": "pnpm@8.2.0",
  "engines": {
    "node": ">=18.15.0"
  }
}
