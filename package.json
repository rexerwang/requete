{
  "name": "requete",
  "version": "1.0.3",
  "description": "A lightweight client-side HTTP request library based on the Fetch API and supports middleware.",
  "scripts": {
    "build": "pnpm clean && rollup -c",
    "lint": "tsc --noEmit && eslint --cache --fix --ext .ts",
    "clean": "rimraf -rf ./dist",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "serve": "json-server -c ./examples/mocks/json-server.json ./examples/mocks/db.json",
    "release": "release-it",
    "postinstall": "husky install"
  },
  "type": "module",
  "types": "./index.d.ts",
  "main": "./index.cjs",
  "module": "./index.mjs",
  "browser": "./index.umd.js",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.mjs",
      "require": "./index.cjs"
    },
    "./middleware": {
      "types": "./middleware.d.ts",
      "import": "./middleware.mjs",
      "require": "./middleware.cjs"
    },
    "./adapter": {
      "types": "./adapter.d.ts",
      "import": "./adapter.mjs",
      "require": "./adapter.cjs"
    },
    "./polyfill": "./polyfill.umd.js",
    "./package.json": "./package.json"
  },
  "keywords": [
    "http",
    "request",
    "fetch",
    "xhr",
    "middleware",
    "promise"
  ],
  "author": "Rexer Wang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rexerwang/requete.git"
  },
  "bugs": {
    "url": "https://github.com/rexerwang/requete/issues"
  },
  "homepage": "https://github.com/rexerwang/requete#readme",
  "sideEffects": false,
  "devDependencies": {
    "@babel/preset-env": "^7.21.4",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@release-it/conventional-changelog": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-terser": "^0.4.1",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@vitest/coverage-c8": "^0.30.1",
    "@vitest/ui": "^0.30.1",
    "abortcontroller-polyfill": "^1.7.5",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "headers-polyfill": "^3.1.2",
    "husky": "^8.0.3",
    "json-server": "^0.17.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "release-it": "^15.10.1",
    "rimraf": "^5.0.0",
    "rollup": "^3.20.4",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  },
  "packageManager": "pnpm@8.2.0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{mjs,cjs,js,json,md,html}": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}",
      "tagName": "v${version}",
      "tagAnnotation": "Release v${version}",
      "requireBranch": "main"
    },
    "npm": {
      "publish": true,
      "publishPath": "./dist",
      "ignoreVersion": false
    },
    "github": {
      "release": true,
      "releaseName": "Release v${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md",
        "header": "# Changelog"
      }
    },
    "hooks": {
      "after:bump": "pnpm build",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
